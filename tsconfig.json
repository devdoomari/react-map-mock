{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noLib": false,
    "jsx": "react",
    "outDir": "./lib_es6",
    "rootDir": "./src"
  },
  "filesGlob": [
    "src/*.ts",
    "src/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "custom_typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "!node_modules/react-modular-map",
    "static",
    "typings/browser.d.ts",
    "typings/browser",
    "__tests__",
    "__tmp__",
    "lib",
    "lib_es6",
    "umd",
    "build"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
